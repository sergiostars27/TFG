{% extends 'baseGame.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}


{% block body %}
    {{ parent() }}

    {% for image in game.imageList %}
            <div class="py-3 text-center" style="position: relative;">
                <a href="{{ path('imageDelete', {game:game.id, imageName:image}) }}" > <img src="/img/x.png" alt="" class="img-fluid" style="width: 30px; position: absolute;"/> </a>
                <a href="/uploads/files/{{ image }}" > <img src="/uploads/files/{{ image }}" class="img-fluid" style="Max-width: 1200px" alt="Responsive image"> </a>
            </div>
    {% endfor %}

    <div class="container p-3 my-4">
        {{form_start(form)}}
        <div class="row">

            <div class="col-md-12 my-2">
                {{form_widget(form.imageList)}}

            </div>

            <div class="col-md-12 my-2">
                {{form_widget(form.submit, {attr:{'class':'btn btn-success btn-block'}})}}
            </div>

        </div>

        {{form_end(form)}}
    </div>
{% endblock %}