{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    {{ parent() }}

    <div class="container mt-5 text-center">
        <div class="row">

            {% for game in games %}
                <div class="col-sm-12 col-md-12 col-lg-4 col-xl-4 py-3">
                   <div class="card border-dark" style="width: 18rem; hight: 18rem;">
                        <a href="{{ path('gameDetails', {id:game.id}) }}" > <img src="/uploads/files/{{ game.cover }}" class="card-img-top"> </a>
                        <h1 class="card-title"> {{game.name}} </h1>
                   </div>
                </div>
            {% endfor %}
            <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4 py-3">
                <div class="card border-dark" style="width: 18rem; hight: 18rem;">
                    <a href="/home/game" > <img src="/img/Plus.png" class="card-img-top"> </a>
                    <h1 class="card-title">Crear partida</h1>
                </div>
            </div>
        </div>

    </div>

{% endblock %}
