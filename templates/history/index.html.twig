{% extends 'baseGame.html.twig' %}

{% block title %}Hello HistoryController!{% endblock %}

{% block body %}
{{ parent() }}

    <div class="container pt-5">
        <div class="row">
            <div class="col-md-8 bg-white col-xs-12 mx-auto pt-2 border border-4 rounded border-dark">
                <div style="height: 70vh; overflow-y: scroll; overflow-x: auto; overflow-wrap: break-word; hyphens: auto;">
                    {% for element in historial %}
                        <h5>{{element.date|date('Y-m-d') }}: {{element.content}}<br></h5>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
