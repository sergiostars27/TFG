{% extends 'baseGame.html.twig' %}

{% block title %}Hello FichaController!{% endblock %}

{% block body %}

{{ parent() }}
    <div class="container mt-3 bg-white border border-4 rounded border-dark" style="max-width: 90%;">
    <form method="post"> 
        <div class="row">
            <div class="col-4 p-3">
                <div class="row">
                    <div class="col-md-8 col-xs-12">
                        <label for="name">Nombre del personaje</label>
                        <input type="text" id="name" name="_name" placeholder="Nombre..." class="form-control" autocomplete="off">
                    </div>

                    <div class="col-md-4 col-xs-12">
                        <label for="age">Edad</label>
                        <input type="number" id="age" name="_age" value="0" class="form-control" autocomplete="off">
                    </div>
                </div>
            </div>
            <div class="col-8 p-3 row">
                <div class="col-md-4 col-xs-12 pb-3">
                    <label for="rsexo">Genero</label>
                    <select id="sexo" name="_gender" class="form-control">
                        <option>Hombre</option>
                        <option>Mujer</option>
                        <option>Otro</option>
                    </select>
                </div>

{% endblock %}
